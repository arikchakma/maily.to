{
  "name": "@maily-to/actions",
  "version": "1.0.0",
  "private": true,
  "description": "A set of actions for server-side processing.",
  "sideEffects": false,
  "main": "./dist/index.js",  // Main entry point for CommonJS
  "module": "./dist/index.mjs", // Main entry point for ES modules
  "types": "./dist/index.d.ts", // Type definitions
  "files": [
    "dist/**" // Include all files in the dist folder
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch", 
    "clean": "rm -rf dist", 
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix", 
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^6.0.0",
    "eslint": "^8.0.0"
  },
  "license": "MIT"
}

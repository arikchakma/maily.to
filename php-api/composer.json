{
    "name": "maily/php-api",
    "description": "PHP API Backend for Maily Email Editor",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Maily\\": "src/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8001 -t public",
        "build-frontend": "cd ../apps/web && npm run build"
    }
}